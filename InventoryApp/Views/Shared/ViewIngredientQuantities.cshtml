@model IEnumerable<InventoryApp.Data.Models.IngredientQuantityModel>

<script type="text/javascript">
    $(document).ready(function () {
        $(".confirmAction").click(function (e) {
            if (!confirm('Are you sure you want to delete this item?')) { e.preventDefault() }
        });
    });
</script>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IngredientID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Unit)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IngredientID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Unit)
        </td>
        <td>
            @Html.ActionLink("Delete", "DeleteOneQuantity", "Home", new { id = item.ID }, new { @class = "confirmAction" }) |
            @Html.ActionLink("Edit", "Edit", new { id=item.ID })            
        </td>
    </tr>
}
    <tr>
        <td>Total: @Model.Sum(m=>m.Amount)</td>
    </tr>
</table>
